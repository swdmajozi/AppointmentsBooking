@model PatientsAppointment.Models.PersonalDetails

@{
    ViewData["Title"] = "Personal Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/personal-details.css" rel="stylesheet" />

<div class="browser-frame p-3">
    <!-- Header (logo + flag + top nav) -->
    <div class="container-fluid bg-white mb-2">
        <div class="d-flex align-items-center justify-content-between py-2">
            <div class="d-flex align-items-center">
                <img src="~/images/dtic-logo.png" alt="dtic logo" class="logo" />
                <div class="ms-2">
                    <div class="app-title">the dtic wellness centre</div>
                    <div class="app-sub">Department of Trade, Industry and Competition</div>
                </div>
            </div>

            <div class="d-flex align-items-center">
                <div class="me-3 text-end small">jsmith@thedtic.gov.za</div>
                <img src="~/images/za-flag.png" alt="Flag" class="flag" />
            </div>
        </div>

        <nav class="navbar dtic-header navbar-expand">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                <li class="nav-item"><a class="nav-link active" href="#">Personal Details</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Appointment</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Documents</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
            </ul>
        </nav>
    </div>

    <!-- Sub-tabs -->
    <div class="container mb-3">
        <ul class="nav nav-tabs sub-tabs">
            <li class="nav-item"><a class="nav-link active" href="#">Personal Details</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Work Details</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Next of Kin Details</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Medical Aid Details</a></li>
            <li class="nav-item"><a class="nav-link" href="#">Family Practitioner Details</a></li>
        </ul>
    </div>

    <!-- Main content panel -->
    <div class="container">
        <div class="panel-box p-4 rounded">
            <h4 class="mb-4">Personal Details</h4>

            <form asp-action="Save" method="post" id="personalDetailsForm" class="row g-3">
                @Html.AntiForgeryToken()

                <div class="col-md-4">
                    <label asp-for="FirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Surname" class="form-label">Surname <span class="text-danger">*</span></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="IdNumber" class="form-label">ID Number <span class="text-danger">*</span></label>
                    <input asp-for="IdNumber" class="form-control" placeholder="NNNNNNNNNNNNN (13 digits)" />
                    <span asp-validation-for="IdNumber" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Gender" class="form-label">Gender <span class="text-danger">*</span></label>
                    <select asp-for="Gender" class="form-select">
                        <option value="">Please Select</option>
                        <option>Male</option>
                        <option>Female</option>
                        <option>Other</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="NumberOfChildren" class="form-label">Number of Children <span class="text-danger">*</span></label>
                    <select asp-for="NumberOfChildren" class="form-select">
                        <option value="">Please Select</option>
                        <option>0</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3+</option>
                    </select>
                    <span asp-validation-for="NumberOfChildren" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label asp-for="HomeAddress" class="form-label">Home Address <span class="text-danger">*</span></label>
                    <input asp-for="HomeAddress" class="form-control" />
                    <span asp-validation-for="HomeAddress" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="City" class="form-label">City <span class="text-danger">*</span></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Suburb" class="form-label">Suburb <span class="text-danger">*</span></label>
                    <input asp-for="Suburb" class="form-control" />
                    <span asp-validation-for="Suburb" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Province" class="form-label">Province <span class="text-danger">*</span></label>
                    <select asp-for="Province" class="form-select">
                        <option value="">Please Select</option>
                        <option>Eastern Cape</option>
                        <option>Free State</option>
                        <option>Gauteng</option>
                        <option>KwaZulu-Natal</option>
                        <option>...other provinces...</option>
                    </select>
                    <span asp-validation-for="Province" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="PostalCode" class="form-label">Postal Code <span class="text-danger">*</span></label>
                    <input asp-for="PostalCode" class="form-control" placeholder="NNNN" />
                    <span asp-validation-for="PostalCode" class="text-danger small"></span>
                </div>

                <!-- yellow note on the right (positioned with grid) -->
                <div class="col-md-4 offset-md-4">
                    <div class="note-yellow p-3">
                        <strong>This screen allows the Patient to capture their Personal Details</strong>
                        <hr />
                        <div><strong>Save Button:</strong></div>
                        <div>Saves the Personal Details to the database</div>
                    </div>
                </div>

                <!-- Save button aligned bottom-right -->
                <div class="col-12 d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-save">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/personal-details.js"></script>